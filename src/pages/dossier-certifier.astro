---
import Layout from '../layouts/Layout.astro';

const TEXTS = {
	headerTitle: "Certification et vérification<br>de documents",
	demoVideo: "Demo Vidéo",
	comingSoon: "Bientôt disponible",
	ownerBtn: "Je souhaite vérifier un document",
	ownerStep1: "Je reçois un document certifié",
	ownerStep2: `Je vérifie le document sur <a href="https://verify.tisura.xyz/" class="font-semibold text-blue-600 dark:text-blue-400" target="_blank">verify.tisura.xyz</a>`,
	applicantBtn: "Je souhaite certifier un document",
	applicantStep1: `J'installe l'extension <a href="https://chromewebstore.google.com/detail/tisura-redirector-esm/hoinkjfjaejeilfgnidgdogbhbiakgei" class="text-purple-600 dark:text-purple-400 font-medium cursor-pointer" target="_blank">Tisura</a>.`,
	applicantStep2: "Je télécharge et certifie mes documents.",
	applicantStep3: "J'envoie mes documents certifiés.",
	contactText: "Pour toute autre question, envoyez un email à ",
	contactEmail: "contact@tisura.xyz"
};
const providers = ["DGFIP", "Ameli", "LCL", "Société Générale", "Qonto", "Shine", "BoursoBank", "Digiposte", "Free", "TotalEnergies", "France Travail", "LinkedIn", "Gmail"];

const VIDEOS = {
  applicant: "https://www.youtube.com/embed/AsEb164cl8g?rel=0&modestbranding=1",
  owner: "https://www.youtube.com/embed/mD1JxMWpPMc?rel=0&modestbranding=1",
  demo: "https://www.youtube.com/embed/nNy5jjgwFh4?rel=0&modestbranding=1"
};
---

<Layout title="Dossier Certifier">
	<main class="space-y-40">
		<div class="max-w-6xl mx-auto px-6 py-24">
			<!-- Header with gradient text -->
			<div class="text-center mb-20">
				<h1 class="text-6xl font-bold mb-4 mt-16 bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 dark:from-blue-400 dark:via-purple-400 dark:to-pink-400 bg-clip-text text-transparent" set:html={TEXTS.headerTitle}>
				</h1>
			</div>

			<!-- Demo Video Section -->
            <div class="relative group mb-24 max-w-3xl mx-auto">
                <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-purple-600 rounded-3xl blur opacity-25 group-hover:opacity-40 transition duration-500"></div>
                <div class="relative bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-3xl p-3 backdrop-blur-xl">
                    <div class="relative w-full pb-[56.25%] rounded-2xl overflow-hidden">
                    <iframe
                        class="absolute inset-0 w-full h-full"
                        src={VIDEOS.demo}
                        title="Démo — Tisura"
                        loading="lazy"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                        allowfullscreen
                    ></iframe>
                    </div>
                </div>
            </div>

			<!-- Two Column Layout -->
			<div class="grid lg:grid-cols-2 gap-12 relative max-w-5xl mx-auto">
				<!-- Vertical Divider line -->
				<div class="hidden lg:block absolute left-1/2 top-2 bottom-8 w-px bg-gradient-to-b from-transparent via-gray-300 dark:via-gray-600 to-transparent -translate-x-1/2"></div>

				<!-- Left Column - Applicant -->
				<div class="flex flex-col">
					<button id="applicantBtn" class="group relative px-10 py-4 bg-purple-900/5 dark:bg-purple-900/10 rounded-2xl font-semibold text-purple-900 dark:text-purple-100 hover:scale-105 hover:bg-purple-900/10 dark:hover:bg-purple-900/20 transition-all duration-300 mb-10 overflow-hidden">
						<div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-pink-600 opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
						<span class="relative flex items-center justify-center space-x-2">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
							</svg>
							<span>{TEXTS.applicantBtn}</span>
						</span>
					</button>

					<div id="applicantContent" class="hidden animate-fadeIn">
    					<div class="mb-10">
                        <div class="relative group">
                            <div class="absolute -inset-0.5 bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl blur opacity-20 group-hover:opacity-30 transition duration-300"></div>
                            <div class="relative bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-700 p-3">
                            <div class="relative w-full pb-[56.25%] rounded-xl overflow-hidden">
                                <iframe
                                class="absolute inset-0 w-full h-full"
                                src={VIDEOS.applicant}
                                title="Démo — Certification de document"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                allowfullscreen
                                ></iframe>
                            </div>
                            </div>
                        </div>
                        </div>

    					<div class="relative group/card">
							<div class="absolute -inset-0.5 bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl blur opacity-20 group-hover/card:opacity-30 transition duration-300"></div>
							<div class="relative bg-white dark:bg-gray-900 rounded-2xl p-8 border border-gray-200 dark:border-gray-700 backdrop-blur-xl">
								<div class="space-y-5">
									<div class="flex items-start space-x-4 group/item">
										<div class="flex-shrink-0 w-8 h-8 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center text-purple-600 dark:text-purple-400 font-bold group-hover/item:scale-110 transition-transform">1</div>
										<p class="text-gray-700 dark:text-gray-300 pt-1" set:html={TEXTS.applicantStep1}>
										</p>
									</div>

									<div class="flex items-start space-x-4 group/item">
                                        <div class="flex-shrink-0 w-8 h-8 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center text-purple-600 dark:text-purple-400 font-bold group-hover/item:scale-110 transition-transform">2</div>

                                        <div class="pt-1 flex-1">
                                            <button id="toggleProviders" class="inline-flex items-center gap-2 group cursor-pointer select-none hover:text-purple-600">
                                            <span>{TEXTS.applicantStep2}</span>
                                            <svg id="arrowIcon" class="w-4 h-4 text-gray-500 transition-transform duration-300 transform group-hover:text-purple-500"
                                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                            </svg>
                                            </button>

                                            <ul
                                            id="providersList"
                                            class="hidden mt-3 ml-6 space-y-1 list-disc text-sm text-gray-600 dark:text-gray-400"
                                            set:html={providers.map(p => `<li>${p}</li>`).join("")}>
                                            </ul>
                                        </div>
                                    </div>

									<div class="flex items-start space-x-4 group/item">
										<div class="flex-shrink-0 w-8 h-8 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center text-purple-600 dark:text-purple-400 font-bold group-hover/item:scale-110 transition-transform">3</div>
										<p class="text-gray-700 dark:text-gray-300 pt-1">{TEXTS.applicantStep3}</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<!-- Right Column - Owner -->
				<div class="flex flex-col">
					<button id="ownerBtn" class="group relative px-10 py-4 bg-blue-900/5 dark:bg-blue-900/10 rounded-2xl font-semibold text-blue-900 dark:text-blue-100 hover:scale-105 hover:bg-blue-900/10 dark:hover:bg-blue-900/20 transition-all duration-300 mb-10 overflow-hidden">
						<div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
						<span class="relative flex items-center justify-center space-x-2">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
							</svg>
							<span>{TEXTS.ownerBtn}</span>
						</span>
					</button>

					<div id="ownerContent" class="hidden animate-fadeIn">
    					<div class="mb-10">
                        <div class="relative group">
                            <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl blur opacity-20 group-hover:opacity-30 transition duration-300"></div>
                            <div class="relative bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-700 p-3">
                            <div class="relative w-full pb-[56.25%] rounded-xl overflow-hidden">
                                <iframe
                                class="absolute inset-0 w-full h-full"
                                src={VIDEOS.owner}
                                title="Démo — Vérification de document"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                allowfullscreen
                                ></iframe>
                            </div>
                            </div>
                        </div>
                        </div>

    					<div class="relative group/card">
							<div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-2xl blur opacity-20 group-hover/card:opacity-30 transition duration-300"></div>
							<div class="relative bg-white dark:bg-gray-900 rounded-2xl p-8 border border-gray-200 dark:border-gray-700 backdrop-blur-xl">
								<div class="space-y-5">
									<div class="flex items-start space-x-4 group/item">
										<div class="flex-shrink-0 w-8 h-8 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center text-blue-600 dark:text-blue-400 font-bold group-hover/item:scale-110 transition-transform">1</div>
										<p class="text-gray-700 dark:text-gray-300 pt-1">{TEXTS.ownerStep1}</p>
									</div>
									<div class="flex items-start space-x-4 group/item">
										<div class="flex-shrink-0 w-8 h-8 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center text-blue-600 dark:text-blue-400 font-bold group-hover/item:scale-110 transition-transform">2</div>
										<p class="text-gray-700 dark:text-gray-300 pt-1" set:html={TEXTS.ownerStep2}>
										</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- FAQ Section -->
            <section id="faq" class="max-w-4xl mx-auto mt-24">
            <h2 class="text-3xl font-bold text-center mb-10 bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 dark:from-blue-400 dark:via-purple-400 dark:to-pink-400 bg-clip-text text-transparent">
                Questions fréquentes
            </h2>

            <div id="faq-accordion" class="space-y-4">
                <!-- Authenticité & intégrité -->
                <details class="group relative rounded-2xl border border-gray-200 dark:border-gray-700 bg-white/60 dark:bg-gray-900/60 p-5 backdrop-blur-xl transition">
                <summary class="cursor-pointer list-none flex items-start justify-between gap-6">
                    <span class="text-base font-medium text-gray-900 dark:text-gray-100">
                    Que signifie que Tisura garantit authenticité et intégrité ?
                    </span>
                    <span class="mt-1 shrink-0 transition group-open:rotate-90">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </span>
                </summary>
                <div class="mt-3 text-gray-700 dark:text-gray-300">
                    <strong>Authenticité</strong> : le fichier présenté est bien celui délivré par le site source au moment du téléchargement.
                    <strong>Intégrité</strong> : il n’a pas été modifié bit-à-bit. On le prouve par une comparaison cryptographique entre l’empreinte du fichier et la trace chiffrée capturée lors du téléchargement.
                </div>
                <div class="pointer-events-none absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 blur group-open:opacity-20 transition"></div>
                </details>

                <!-- Techno -->
                <details class="group relative rounded-2xl border border-gray-200 dark:border-gray-700 bg-white/60 dark:bg-gray-900/60 p-5 backdrop-blur-xl transition">
                <summary class="cursor-pointer list-none flex items-start justify-between gap-6">
                    <span class="text-base font-medium text-gray-900 dark:text-gray-100">
                    Quelle est la techno utilisée ?
                    </span>
                    <span class="mt-1 shrink-0 transition group-open:rotate-90">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </span>
                </summary>
                <div class="mt-3 text-gray-700 dark:text-gray-300">
                    Tisura s’appuie sur <em>TLS session keys</em>, empreintes cryptographiques (ex. SHA-256) et comparaison déterministe
                    entre le fichier fourni et la réponse HTTPS capturée lors du téléchargement via l’infrastructure Tisura.
                    Pas d’IA : c’est une <strong>preuve cryptographique de provenance</strong>, pas une analyse du contenu.
                </div>
                <div class="pointer-events-none absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 blur group-open:opacity-20 transition"></div>
                </details>

                <!-- Accès aux données -->
                <details class="group relative rounded-2xl border border-gray-200 dark:border-gray-700 bg-white/60 dark:bg-gray-900/60 p-5 backdrop-blur-xl transition">
                <summary class="cursor-pointer list-none flex items-start justify-between gap-6">
                    <span class="text-base font-medium text-gray-900 dark:text-gray-100">
                    Est-ce que Tisura a accès à mes données téléchargées ?
                    </span>
                    <span class="mt-1 shrink-0 transition group-open:rotate-90">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </span>
                </summary>
                <div class="mt-3 text-gray-700 dark:text-gray-300">
                    Non. Tisura ne lit pas le contenu du document. Nous conservons la <strong>réponse chiffrée</strong> et les métadonnées
                    minimales nécessaires à la preuve, afin de comparer plus tard sans stocker le fichier en clair.
                </div>
                <div class="pointer-events-none absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 blur group-open:opacity-20 transition"></div>
                </details>

                <!-- Rétention -->
                <details class="group relative rounded-2xl border border-gray-200 dark:border-gray-700 bg-white/60 dark:bg-gray-900/60 p-5 backdrop-blur-xl transition">
                <summary class="cursor-pointer list-none flex items-start justify-between gap-6">
                    <span class="text-base font-medium text-gray-900 dark:text-gray-100">
                    Est-ce que Tisura conserve mes données ? Si oui, combien de temps ?
                    </span>
                    <span class="mt-1 shrink-0 transition group-open:rotate-90">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </span>
                </summary>
                <div class="mt-3 text-gray-700 dark:text-gray-300">
                    Nous conservons uniquement ce qui est nécessaire à la vérification (traces chiffrées, empreintes, journaux techniques)
                    sur une <strong>durée limitée à 7 jours</strong>. La rétention est <strong>configurable</strong> selon les besoins clients
                    (ex. quelques mois). Suppression sur demande conforme RGPD.
                </div>
                <div class="pointer-events-none absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 blur group-open:opacity-20 transition"></div>
                </details>

                <!-- Types de documents -->
                <details class="group relative rounded-2xl border border-gray-200 dark:border-gray-700 bg-white/60 dark:bg-gray-900/60 p-5 backdrop-blur-xl transition">
                <summary class="cursor-pointer list-none flex items-start justify-between gap-6">
                    <span class="text-base font-medium text-gray-900 dark:text-gray-100">
                    Puis-je utiliser Tisura pour tous types de documents ?
                    </span>
                    <span class="mt-1 shrink-0 transition group-open:rotate-90">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </span>
                </summary>
                <div class="mt-3 text-gray-700 dark:text-gray-300">
                    Tisura cible d’abord les <strong>PDF</strong> et <strong>JSON</strong> téléchargés via HTTPS depuis des sites officiels.
                    D’autres formats pourront être ajoutés progressivement. La vérification fonctionne même si le fichier a été renommé.
                </div>
                <div class="pointer-events-none absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 blur group-open:opacity-20 transition"></div>
                </details>

                <!-- Activé en permanence ? -->
                <details class="group relative rounded-2xl border border-gray-200 dark:border-gray-700 bg-white/60 dark:bg-gray-900/60 p-5 backdrop-blur-xl transition">
                <summary class="cursor-pointer list-none flex items-start justify-between gap-6">
                    <span class="text-base font-medium text-gray-900 dark:text-gray-100">
                    Est-ce que le service est tout le temps actif ?
                    </span>
                    <span class="mt-1 shrink-0 transition group-open:rotate-90">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </span>
                </summary>
                <div class="mt-3 text-gray-700 dark:text-gray-300">
                    Non. La certification ne s’active que lorsque vous l’initiez (extension + téléchargement via l’infra Tisura).
                    En dehors de ces actions, rien n’est capturé.
                </div>
                <div class="pointer-events-none absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 blur group-open:opacity-20 transition"></div>
                </details>

                <!-- Compte -->
                <details class="group relative rounded-2xl border border-gray-200 dark:border-gray-700 bg-white/60 dark:bg-gray-900/60 p-5 backdrop-blur-xl transition">
                <summary class="cursor-pointer list-none flex items-start justify-between gap-6">
                    <span class="text-base font-medium text-gray-900 dark:text-gray-100">
                    Dois-je créer un compte ?
                    </span>
                    <span class="mt-1 shrink-0 transition group-open:rotate-90">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </span>
                </summary>
                <div class="mt-3 text-gray-700 dark:text-gray-300">
                    <strong>Certification</strong> : installez l’extension Tisura et suivez les étapes ; pas d’inscription complexe.
                    <strong>Vérification</strong> : pas de compte requis, vous uploadez le fichier et obtenez le résultat.
                </div>
                <div class="pointer-events-none absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 blur group-open:opacity-20 transition"></div>
                </details>

                <!-- Deepfakes -->
                <details class="group relative rounded-2xl border border-gray-200 dark:border-gray-700 bg-white/60 dark:bg-gray-900/60 p-5 backdrop-blur-xl transition">
                <summary class="cursor-pointer list-none flex items-start justify-between gap-6">
                    <span class="text-base font-medium text-gray-900 dark:text-gray-100">
                    Est-ce que Tisura détecte des deepfakes ?
                    </span>
                    <span class="mt-1 shrink-0 transition group-open:rotate-90">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                    </span>
                </summary>
                <div class="mt-3 text-gray-700 dark:text-gray-300">
                    Tisura peut être utilisé pour détecter toute modification d'un fichier, y compris les deepfakes. Nous prouvons la <strong>provenance</strong> et l’<strong>intégrité</strong> :
                    un document est considéré fiable s’il correspond exactement à ce qui a été délivré par la source officielle.
                </div>
                <div class="pointer-events-none absolute -inset-0.5 rounded-2xl bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 blur group-open:opacity-20 transition"></div>
                </details>
            </div>
            </section>


			<!-- Contact Info -->
			<div class="text-center mt-6">
				<div class="inline-flex items-center space-x-2 px-6 py-3 bg-gray-100 dark:bg-gray-800 rounded-full border border-gray-200 dark:border-gray-700">
					<svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
					</svg>
					<span class="text-gray-600 dark:text-gray-400">{TEXTS.contactText} </span>
					<a href="mailto:contact@tisura.xyz" class="font-semibold text-blue-600 dark:text-blue-400 hover:underline">{TEXTS.contactEmail}</a>
				</div>
			</div>
		</div>
	</main>

	<style>
		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(-10px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		.animate-fadeIn {
			animation: fadeIn 0.4s ease-out;
		}
	</style>

	<script>
        const ownerBtn = document.getElementById('ownerBtn');
        const applicantBtn = document.getElementById('applicantBtn');
        const ownerContent = document.getElementById('ownerContent');
        const applicantContent = document.getElementById('applicantContent');

        // Toggle function
        function toggleSection(button, section, otherButton, otherSection, color) {
          const isHidden = section.classList.contains('hidden');

          // Hide the other section
          otherSection?.classList.add('hidden');
          otherButton?.classList.remove('bg-blue-500', 'text-white', 'border-blue-500');
          otherButton?.classList.remove('bg-purple-500', 'text-white', 'border-purple-500');

          // Toggle current section
          if (isHidden) {
            section.classList.remove('hidden');
            section.classList.add('mb-14');
            button.classList.add(`bg-${color}-500`, 'text-white', `border-${color}-500`);
          } else {
            section.classList.add('hidden');
            button.classList.remove(`bg-${color}-500`, 'text-white', `border-${color}-500`);
          }
        }

        ownerBtn?.addEventListener('click', () =>
          toggleSection(ownerBtn, ownerContent, applicantBtn, applicantContent, 'blue')
        );

        applicantBtn?.addEventListener('click', () =>
          toggleSection(applicantBtn, applicantContent, ownerBtn, ownerContent, 'purple')
        );

        // Provider toggle inside applicant section
        const toggleBtn = document.getElementById("toggleProviders");
        const providersList = document.getElementById("providersList");
        const arrowIcon = document.getElementById("arrowIcon");

