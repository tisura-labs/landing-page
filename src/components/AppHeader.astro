---
import Container from "./Container.astro";
const links = [
  { to: "/#solutions", label: "Solutions" },
  { to: "/#features",  label: "Features" },
  { to: "https://tisura-docs.vercel.app/", label: "Documentation" },
  { to: "https://tally.so/r/wM7kGp", label: "Contact" },
