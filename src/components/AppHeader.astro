---
import Container from "./Container.astro";

const links = [
  { to: "/#solutions", label: "Solutions" },
  { to: "/#use-cases", label: "Use Cases" },
  { to: "/#features",  label: "Features" },
  { to: "https://tisura-docs.vercel.app/", label: "Documentation" },
  // { to: "https://tally.so/r/wM7kGp", label: "Contact" },
];
---

<header class="relative z-50">
  <nav class="w-full pt-4 md:pt-6">
    <Container>
      <div class="flex items-center justify-between gap-4">

        <!-- Left: Logo -->
        <div class="flex items-center flex-shrink-0 -mt-4">
          <a href="/#home" aria-label="logo" class="flex items-center space-x-2 overflow-hidden h-20">
            <img
              src="/logo_white.svg"
              alt="Tisura Logo"
              class="h-36 w-auto hidden dark:block"
              aria-hidden="true"
            />
            <img
              src="/logo_blue.svg"
              alt="Tisura Logo"
              class="h-36 w-auto block dark:hidden"
              aria-hidden="true"
            />
          </a>
        </div>

        <!-- Center: Desktop Navigation Links -->
        <div
          id="desktopNav"
          class="hidden md:flex flex-1 items-center justify-center gap-8"
        >
          {links.map(({ to, label }) => (
            <a
              href={to}
              class="text-primary dark:text-light-muted hover:text-white hover:scale-105 font-medium transition-transform duration-200"
            >
              {label}
            </a>
