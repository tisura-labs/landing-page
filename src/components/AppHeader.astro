---

<header>
  <!-- keep the original blue/blur hero color -->
  <div class="absolute inset-0 -z-10 h-32 bg-hero-light dark:bg-hero-dark opacity-90 blur-xl"></div>

  <!-- keep your absolute nav so it visually blends with the hero -->
  <nav class="absolute z-50 w-full pt-10 lg:border-transparent">
    <Container>
      <div class="flex items-center justify-center w-full relative">

        <!-- Left: Logo (unchanged) -->
        <div class="absolute left-0 flex items-center">
          <a href="/#home" aria-label="logo" class="flex items-center space-x-2">
            <img src="/logo.svg" alt="Tisura Logo" class="h-20 w-20" aria-hidden="true">
          </a>
        </div>

        <!-- Center: Desktop Navigation Links (unchanged look) -->
        <div class="hidden md:flex items-center space-x-8">
          {links.map(({to,label}) => (
            <a href={to} class="text-primary dark:text-light-muted hover:text-white text-sm md:text-base font-medium">{label}</a>
          ))}
        </div>

        <!-- Right: Desktop Social Icons + Mobile Hamburger -->
        <div class="absolute right-0 flex items-center space-x-6">
          <!-- desktop socials (your original SVGs) -->
          <div class="hidden md:flex items-center space-x-6">
