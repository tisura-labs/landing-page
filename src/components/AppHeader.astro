      <Container>
        <div class="mt-3 rounded-xl border border-black/5 dark:border-white/10 bg-white/90 dark:bg-gray-900/90 backdrop-blur p-4">
          <ul class="space-y-2">
            {links.map(({to,label}) => (
              <li><a href={to} class="block py-2 font-medium text-primary dark:text-light-muted">{label}</a></li>
            ))}
